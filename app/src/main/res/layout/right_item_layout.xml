<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMessageImageR"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/rightLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/imgMessageImageR"
        android:background="@drawable/right_side_background"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtMessageR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="hello"
            android:maxWidth="250dp"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/sendImageR"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/messageDateR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="8dp"
            android:gravity="end"
            android:maxWidth="250dp"
            android:singleLine="false"
            android:textColor="@color/grey"
            android:textSize="10dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
